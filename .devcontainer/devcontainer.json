{
  "name": "streamlit-codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": { "label": "Streamlit" }
  },
  "postCreateCommand": "pip install -U pip && (pip install -r requirements.txt || pip install streamlit)",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  }
}